<div class="p-1 rounded" style="border: 1px solid #560bad">
    <div class="form-group">
        <label for="firstName">
            <h6>First Name</h6>
        </label>
        <input type="text" name="firstName" placeholder="First Name" required class="form-control">
    </div>

    <div class="form-group">
        <label for="lastName">
            <h6>Last Name</h6>
        </label>
        <input type="text" name="lastName" placeholder="Last Name" required class="form-control">
    </div>

    <div class="form-group">
        <label for="email"> <h6>Email</h6>    </label>
        <input type="text" name="email" placeholder="Email" required class="form-control">
    </div>


    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label for="address"><h6>Address</h6></label>
                <input type="text" name="address" placeholder="Address" required class="form-control">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group mb-4">
                <label for="administrativeArea"><h6>Prov./State</h6></label>
                <input type="text" name="administrativeArea" placeholder="Prov./State" required class="form-control">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label for="locality"> <h6>City</h6> </label>
                <input type="text" name="locality" placeholder="City" required class="form-control ">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group mb-4">
                <label for="postalCode">
                    <h6>Postal Code</h6>
                </label>
                <input type="text" name="postalCode" placeholder="Postal Code" required class="form-control">
            </div>
        </div>
    </div>
</div>
